            <ComboBoxItem Height="30">Thành phố Hồ Chí Minh</ComboBoxItem>
            <ComboBoxItem Height="30">Đà Nẵng</ComboBoxItem>
            <ComboBoxItem Height="30">Vũ Hán</ComboBoxItem>
            <ComboBoxItem Height="30">Thanh Hoá</ComboBoxItem>
